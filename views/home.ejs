<section class="hero">
  <h1 class="title">ðŸŽ¬ <span>Video Portal</span></h1>
  <p class="subtitle">Trailer video + tonton full lewat Telegram</p>

  <% if (isAdmin) { %>
    <div style="margin-top:10px">
      <a class="btn btn-outline" href="/admin?key=<%= adminKey %>">Masuk Admin</a>
    </div>
  <% } %>
</section>

<section class="video-grid">
  <% if (videos.length === 0) { %>
    <div class="empty">Belum ada video.</div>
  <% } %>

  <% videos.forEach(v => { %>
    <a class="video-card" href="/watch/<%= v.slug %>">
      <div class="thumb">
        <video src="<%= v.url %>#t=0.1" muted></video>
      </div>
      <div class="meta">
        <h3><%= v.title %></h3>
        <p><%= v.description || "Tonton sekarang" %></p>
      </div>
    </a>
  <% }) %>
</section>
