<section class="admin-wrap">
  <h1 class="title">Admin — Upload Trailer</h1>

  <form class="form" action="/admin/upload" method="post" enctype="multipart/form-data">
    <input name="title" type="text" placeholder="Judul trailer" required />
    <textarea name="description" rows="3" placeholder="Deskripsi singkat"></textarea>
    <input name="fullUrl" type="url" placeholder="Link nonton FULL (Telegram / Bot) — opsional" />
    <input name="video" type="file" accept="video/mp4,video/webm,video/ogg" required/>
    <button class="btn">Upload</button>
  </form>

  <h2 class="title" style="font-size:22px;margin-top:10px">Daftar Trailer</h2>

  <div class="admin-list">
    <% videos.forEach(v => { const share = `${site.baseUrl}/watch/${v.slug}`; %>
      <div class="admin-row">
        <div class="row-main">
          <div class="row-title"><%= v.title %></div>
          <div class="row-sub"><%= new Date(v.createdAt).toLocaleString() %></div>
          <% if (v.fullUrl) { %>
            <div class="row-sub">Full: <a href="<%= v.fullUrl %>" target="_blank" rel="noopener nofollow">buka</a></div>
          <% } %>
        </div>

        <div class="row-share">
          <input class="share-input" type="text" value="<%= share %>" readonly />
          <button class="btn btn-outline" type="button"
                  onclick="navigator.clipboard.writeText('<%= share %>')">Copy</button>
        </div>

        <div class="row-actions">
          <a class="btn btn-ghost" href="/watch/<%= v.slug %>" target="_blank">Lihat</a>
          <form method="post" action="/admin/delete/<%= v.slug %>" onsubmit="return confirm('Hapus video ini?')">
            <button class="btn btn-danger" type="submit">Hapus</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</section>
