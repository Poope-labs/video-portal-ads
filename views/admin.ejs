<section class="admin-wrap">
  <h1 class="title">Admin â€” Upload Video</h1>
  <form class="form" action="/admin/upload" method="post" enctype="multipart/form-data">
    <input name="title" type="text" placeholder="Judul video" required />
    <textarea name="description" rows="3" placeholder="Deskripsi singkat"></textarea>
    <input name="video" type="file" accept="video/mp4,video/webm,video/ogg" required/>
    <button class="btn">Upload</button>
  </form>

  <h2 class="title" style="font-size:22px;margin-top:10px">Daftar Video</h2>
  <div class="video-grid">
    <% videos.forEach(v => { %>
      <div class="video-card">
        <div class="meta" style="padding:14px">
          <h3><%= v.title %></h3>
          <p class="subtitle" style="margin:6px 0"><%= new Date(v.createdAt).toLocaleString() %></p>
          <a class="btn small" href="/watch/<%= v.slug %>">Lihat</a>
          <form method="post" action="/admin/delete/<%= v.slug %>" class="inline" style="display:inline-block;margin-left:8px">
            <button class="btn danger small" type="submit" onclick="return confirm('Hapus video ini?')">Hapus</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</section>
